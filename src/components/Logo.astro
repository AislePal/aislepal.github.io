---
import { SITE } from 'astrowind:config';
import Image from '~/components/common/Image.astro';
---

<span
  class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white flex items-center gap-2"
>
  <div class="dark:invert flex-shrink-0 rounded-md overflow-hidden">
    <Image
      src="~/assets/images/logos/logo_black_white_bg.png"
      alt={SITE?.name || 'Logo'}
      class="h-8 w-auto"
      layout="contained"
      loading="eager"
    />
  </div>
  {SITE?.name}
</span>
